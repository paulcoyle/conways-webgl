.controls-container
  text-align: center

.control-group
  display: inline-block
  padding: 10px 20px
  border-right: 1px solid #ddd

.control-group:last-child
  border-right: none

.control-group > *
  margin-right: 5px

.control-group > *:last-child
  margin-right: 0px

.control-group p
  text-align: left
  margin: 0px 0px 5px 0px
  font-size: 12px
  color: #999

.control-group button
  padding: 6px 10px

.control-group select
  height: 24px
