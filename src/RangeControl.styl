.control-group .range
  position: relative
  display: inline-block
  margin-left: 5px

.control-group .range label
  position: absolute
  color: #666
  top: -5px
  left: 0px

.control-group .range input[type=range]
  position: relative
  top: 10px
  width: 100px

.control-group .range .value
  position: absolute
  color: #666
  top: -5px
  right: 0px
